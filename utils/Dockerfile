FROM alpine:3
LABEL maintainer="Mitz Amano <mitz@linux.com>"

ENV OPENSSH_VERSION=8.1_p1-r0
ENV CURL_VERSION=7.67.0-r0
ENV RSYNC_VERSION=3.1.3-r2
ENV BASH_VERSION=5.0.11-r1
ENV GAWK_VERSION=5.0.1-r0
ENV BIND_TOOLS_VERSION=9.14.12-r0

RUN apk add --no-cache \
openssh=${OPENSSH_VERSION} \
curl=${CURL_VERSION} \
rsync=${RSYNC_VERSION} \
bash=${BASH_VERSION} \
gawk=${GAWK_VERSION} \
bind-tools=${BIND_TOOLS_VERSION}
